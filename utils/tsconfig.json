{
    "compilerOptions": {
      "module": "system",
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "outFile": "../../built/local/tsc.js",
      "sourceMap": true,
      "strictNullChecks": false,
      
      "types": [
        "reflect-metadata",
        "jest",
        "node"
        // ... your other types
      ],
    },
    "include": ["src/**/*",
      "tests/**/*",
      "src/**/*",
    "**/*.spec.ts",
    "**/*.test.ts"
    ],
    "exclude": ["node_modules", "**/*.spec.ts"],
  
    "moduleNameMapper": {
      "d3": "<rootDir>/node_modules/d3/dist/d3.min.js",
      "^d3-(.*)$": "d3-$1/dist/d3-$1"
  },
  }
  
   